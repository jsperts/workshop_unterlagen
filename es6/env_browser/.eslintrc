{
  "extends": [
    "standard",
    "standard-react"
  ],
  "plugins": [
    "babel",
    "react",
    "promise"
  ],
  "env": {
    "browser" : true
  },
  "rules": {
    "comma-dangle": ["error", "always-multiline"],
    "key-spacing"          : 0,
    "jsx-quotes"           : [2, "prefer-single"],
    "no-var": "error",
    "object-curly-spacing": ["error", "always"],
    "semi": ["error", "never"],
    "space-before-function-paren": ["error", {
      "anonymous": "always",
      "named": "never",
      "asyncArrow": "ignore"
    }]
  }
}
